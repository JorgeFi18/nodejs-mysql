<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <a class="navbar-brand" href="/">Volver</a>
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <h1>Actualizar Libro</h1>
        <hr>
        <form action="/update/<%= data.codigo_libro %>" method="POST">  
          <div class="form-group">
            <input type="text" name="titulo" value="<%= data.titulo%>" placeholder="Titulo" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="editorial" value="<%= data.editorial%>" placeholder="Editorial" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="edicion" value="<%= data.edicion%>" placeholder="Edicion" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="nombre_autor" value="<%= data.nombre_autor%>" placeholder="Autor" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="nacionalidad" value="<%= data.nacionalidad%>" placeholder="Nacionalidad" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Actualizar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
