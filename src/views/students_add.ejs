<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <a class="navbar-brand" href="/students">Volver</a>
    <div class="col-md-12">
      <div class="card-body">
        <h1>Agregar Alumno</h1>
        <form action="/students/add" method="POST">
          <div class="form-group">
            <input type="text" name="apellidos" placeholder="Apellidos" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="nombres" placeholder="Nombres" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="direccion" placeholder="Direccion" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="telefono" placeholder="Telefono" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            Guardar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
