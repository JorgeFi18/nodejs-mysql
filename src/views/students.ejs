<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div style="display: flex; justify-content: space-between;">
        <h1>Listado de Alumnos</h1>
        <a href="/students/add-student" class="btn btn-info pull-right"> + Agregar</a>
      </div>
      <hr>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Apellidos</td>
            <td>Nombres</td>
            <td>Direccion</td>
            <td>Telefono</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].apellidos %></td>
                <td><%= data[i].nombres %></td>
                <td><%= data[i].direccion %></td>
                <td><%= data[i].telefono %></td>
                <td>
                  <a href="/students/update/<%= data[i].carnet %>" class="btn btn-info btn-sm">Actualizar</a>
                  <a href="/students/delete/<%= data[i].carnet %>" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/_footer %>
